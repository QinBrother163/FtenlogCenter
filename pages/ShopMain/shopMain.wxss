/* 商品基本信息 shopMain_goodsInfo > */

.shopMain_goodsInfo {
  margin: 50rpx 0 25rpx 0;
}

.goodsInfo_price {
  line-height: 50rpx;
}

.goodsInfo_price text:nth-child(1) {
  font-size: 40rpx;
}

.goodsInfo_intro {
  font-size: 22rpx;
  color: #999;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  height: 65rpx;
  margin-top: 15rpx;
  text-indent: 1em;
}

.selectListWrap {
  padding: 0 20rpx;
}

.selectList + .selectList {
  border-top: 2rpx solid #eee;
}

.selectList {
  padding: 25rpx 0;
}

