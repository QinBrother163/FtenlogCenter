/* 商品推荐 goodsRecommendWrap > */

.goodsRecommendWrap {
  width: 100%;
  margin-bottom: 120rpx;
}

.p_content {
  margin-top: 15rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -ms-flex-direction: row;
  flex-direction: row;
  -ms-flex-wrap: wrap;
  flex-wrap: wrap;
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  justify-content: space-between;
  -webkit-box-align: start;
  -ms-flex-align: start;
  align-items: flex-start;
}

.item_content {
  width: 32%;
  height: 100%;
  padding: 20rpx 0;
  margin-bottom: 55rpx;
  position: relative;
}

.item_content .topIconMark {
  position: absolute;
  top: -20rpx;
  right: 0;
  font-size: 65rpx;
  color: #ff6f87;
  z-index: 100;
}

.item_content .item_content_img {
  width: 100%;
  height: 240rpx;
}

.item_content_title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.item_content_describe {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  height: 65rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

.item_content_price {
  margin-top: 5rpx;
  line-height: 45rpx;
}

.item_content_price .price1 {
  font-size: 30rpx;
  font-weight: bold;
  color: #ff6f87;
}

.item_content_price .price2 {
  font-size: 22rpx;
  color: #9b9b9b;
  margin-left: 10rpx;
  text-decoration: line-through;
}

.goodsDetails {
  text-align: center;
  line-height: 500rpx;
  width: 100%;
  height: 500rpx;
  border: 1rpx solid #eee;
}

.goodsDetailsImg{
  text-align: center;
  width: 100%;
}

/* 商品推荐 goodsRecommendWrap < */

.footerHead {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  border-top: 1rpx solid #eee;
  z-index: 200;
}

.footerHead_wrap {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -ms-flex-direction: row;
  flex-direction: row;
  -ms-flex-wrap: wrap;
  flex-wrap: wrap;
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  /* justify-content: space-between; */
  -webkit-box-align: start;
  -ms-flex-align: start;
  align-items: flex-start;
  width: 100%;
  height: 100%;
}

.footerHead_wrap .list_box {
  padding: 20rpx 0;
  text-align: center;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  font-size: 22rpx;
}

.footerHead_wrap .list_box:nth-child(1) {
  width: 15%;
}

.footerHead_wrap .list_box:nth-child(2) {
  width: 15%;
}

.footerHead_wrap .list_box:nth-child(3) {
  background: #f9977c;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
}

.footerHead_wrap .list_box:nth-child(4) {
  background: #ff6f87;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
}

.footerHead_wrap .list_box:nth-child(3), .footerHead_wrap .list_box:nth-child(4) {
  width: 35%;
  padding: 28rpx 0;
  height: 100%;
  font-size: 30rpx;
}

.footerHead_wrap .list_box:nth-child(3) view,
.footerHead_wrap .list_box:nth-child(4) view {
  margin: 7rpx 0 0 0;
  color: #fff;
}
