/* 商城板块 phoneArea >*/

.phoneArea {
  width: 100%;
}

.p_title {
  padding: 10rpx 20rpx 20rpx 20rpx;
}

.p_title text {
  font-size: 30rpx;
  font-weight: bold;
}

.p_title .text1 {
  display: inline-block;
  color: #ff6f87;
  padding-right: 15rpx;
  border-right: 1rpx solid #999;
}

.p_title .text2 {
  padding-left: 15rpx;
}

.p_content {
  margin-top: 15rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -ms-flex-direction: row;
  flex-direction: row;
  -ms-flex-wrap: wrap;
  flex-wrap: wrap;
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  justify-content: space-between;
  -webkit-box-align: start;
  -ms-flex-align: start;
  align-items: flex-start;
}

.item_content {
  width: 48%;
  height: 100%;
  padding: 20rpx 0;
  margin-bottom: 55rpx;
  border: 1rpx solid #eee;
  position: relative;
}

.item_content .topIconMark {
  position: absolute;
  top: -20rpx;
  right: 0;
  font-size: 65rpx;
  color: #ff6f87;
  z-index: 100;
}

.item_content .item_content_img {
  width: 100%;
  height: 240rpx;
}

.item_content_title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.item_content_describe {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  height: 65rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

.item_content_price {
  margin-top: 5rpx;
  line-height: 45rpx;
}

.item_content_price .price1 {
  font-size: 30rpx;
  font-weight: bold;
  color: #ff6f87;
}

.item_content_price .price2 {
  font-size: 22rpx;
  color: #9b9b9b;
  margin-left: 10rpx;
  text-decoration: line-through;
}
